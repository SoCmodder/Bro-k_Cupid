<header class="navbar navbar-fixed-top navbar-inverse">
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  <script>
      $(".dropdown-menu").ready(function () {
          $(".dropdown-menu li a").mouseover(function () {
              $(this).css("background-color", "#FBAFE3");
              $(this).css("color", "#000");
          });
          $(".dropdown-menu li a").mouseleave(function () {
              $(this).css("background-color", "#FFF");
              $(this).css("color", "#000");
          });
      });
  </script>
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Bro-K Cupid", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", current_user %></li>

          <% if signed_in? %>
              <li><%= link_to "Find Bros", users_path %></li>

              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Events <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Create Event", new_event_path %></li>
                  <li><%= link_to "Find Event", events_path %></li>
                </ul>

              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Questions <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Create Question", new_question_path %></li>
                  <li><%= link_to "Answer Question", questions_path %></li>
                </ul>

              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Sign out", signout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
              <li><%= link_to "Help", help_path %></li>
          <% else %>
              <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>

