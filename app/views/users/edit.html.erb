<% provide(:title, "Edit user") %>
<%= render 'layouts/header' %>
<center><h3>Update your profile</h3></center>
<br/>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name, :class => "fieldlabel" %>
        <%= f.text_field :name, :class => "textfield" %> <br/>

        <%= f.label :email, :class => "fieldlabel" %>
        <%= f.text_field :email, :class => "textfield" %> <br/>

        <%= f.label :password, :class => "fieldlabel" %>
        <%= f.password_field :password, :class => "textfield" %> <br/>

        <%= f.label :password_confirmation, "Confirm Password", :class => "fieldlabel" %>
        <%= f.password_field :password_confirmation, :class => "textfield" %> <br/>

        <%= gravatar_for @user %>
        <a href="http://gravatar.com/emails">change</a> <br/> <br/>
        <hr/>
        <%= f.submit "Save changes", class: "submit", :style => "float: right" %>
    <% end %>

  </div>
</div>

